#ifndef CPP_STALIN_INCLUDE_IOSTREAM__
#define CPP_STALIN_INCLUDE_IOSTREAM__

#include "ios"
#include "iosfwd"
#include "ostream"
#include "istream"
#include "streambuf"

namespace std {
extern istream cin;
extern ostream cout;
extern ostream cerr;
extern ostream clog;

extern wistream wcin;
extern wostream wcout;
extern wostream wcerr;
extern wostream wclog;
}

#endif //CPP_STALIN_INCLUDE_IOSTREAM__
