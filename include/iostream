#ifndef CPP_STALIN_INCLUDE_IOSTREAM__
#define CPP_STALIN_INCLUDE_IOSTREAM__

#include "__config"
#ifndef STALIN_CXX_STD_FREESTANDING

#include "ios"
#include "iosfwd"
#include "ostream"
#include "istream"
#include "streambuf"

namespace std {
#ifndef STALIN_CXX_STD_NO_IO
extern istream cin;
extern ostream cout;
extern ostream cerr;
extern ostream clog;

extern wistream wcin;
extern wostream wcout;
extern wostream wcerr;
extern wostream wclog;
#endif
}

#endif

#endif //CPP_STALIN_INCLUDE_IOSTREAM__
