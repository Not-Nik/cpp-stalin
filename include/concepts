#ifndef CPP_STALIN_INCLUDE_CONCEPTS__
#define CPP_STALIN_INCLUDE_CONCEPTS__

#include "type_traits"

namespace std {
#ifdef STALIN_CXX_STD_SINCE_20
template <class T> concept floating_point = std::is_floating_point_v<T>;
#endif
}

