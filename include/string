    while (n--) {
        if (!eq(*p, *q)) return lt(*p, *q) ? -1 : 1;
        ++p;
        ++q;
    }
    return 0;
}

constexpr const char_traits<wchar_t>::char_type *char_traits<wchar_t>::find(const char_type *p, size_t n, const char_type &c) {
    for (size_t i = 0; i < n; i++) if (eq(p[i], c)) return &p[i];
    return nullptr;
}
#endif

#ifdef STALIN_CXX_STD_SINCE_20
