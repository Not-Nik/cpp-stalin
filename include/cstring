#ifndef CPP_STALIN_INCLUDE_CSTRING__
#define CPP_STALIN_INCLUDE_CSTRING__

#include "__config"
#ifndef STALIN_CXX_STD_FREESTANDING

#include <string.h>

namespace std {

STALIN_USING_IF_EXISTS(::memcpy);
STALIN_USING_IF_EXISTS(::memmove);
STALIN_USING_IF_EXISTS(::strcpy);
STALIN_USING_IF_EXISTS(::strncpy);

STALIN_USING_IF_EXISTS(::strcat);
STALIN_USING_IF_EXISTS(::strncat);

STALIN_USING_IF_EXISTS(::memcmp);
STALIN_USING_IF_EXISTS(::strcmp);
STALIN_USING_IF_EXISTS(::strcoll);
STALIN_USING_IF_EXISTS(::strncmp);
STALIN_USING_IF_EXISTS(::strxfrm);

STALIN_USING_IF_EXISTS(::memchr);
STALIN_USING_IF_EXISTS(::strchr);
STALIN_USING_IF_EXISTS(::strcspn);
STALIN_USING_IF_EXISTS(::strpbrk);
STALIN_USING_IF_EXISTS(::strrchr);
STALIN_USING_IF_EXISTS(::strspn);
STALIN_USING_IF_EXISTS(::strstr);
STALIN_USING_IF_EXISTS(::strtok);

STALIN_USING_IF_EXISTS(::memset);
STALIN_USING_IF_EXISTS(::strerror);
STALIN_USING_IF_EXISTS(::strlen);

STALIN_USING_IF_EXISTS(::size_t);
}

#endif // ifndef STALIN_CXX_STD_FREESTANDING

#endif //CPP_STALIN_INCLUDE_CSTRING__
