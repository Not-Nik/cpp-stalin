#ifndef CPP_STALIN_INCLUDE___DECLVAL__
#define CPP_STALIN_INCLUDE___DECLVAL__

template <class T>
T&& __declval(int);
template <class T>
T __declval(long);

template <class T>
decltype(__declval<T>(0)) declval() noexcept;

#endif //CPP_STALIN_INCLUDE___DECLVAL__
